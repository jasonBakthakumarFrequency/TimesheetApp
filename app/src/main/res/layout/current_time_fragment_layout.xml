<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="0dp"
              android:layout_height="400dp"
              android:id="@+id/map2"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              map:layout_constraintEnd_toEndOf="parent"
              map:layout_constraintStart_toStartOf="parent"
              map:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/sample_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/map2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/sample_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="invisible"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/map2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/sample_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="invisible"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/map2"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView23" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.129" app:layout_constraintEnd_toStartOf="@+id/textView25"/>
    <TextView
            android:text="@string/time_stuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_bold"
            android:id="@+id/textView24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/map2"/>
    <Button
            android:text="@string/start_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corners"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:elevation="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <Button
            android:text="@string/end_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:textColor="@color/white"
            android:elevation="20dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"/>
    <Button
            android:text="@string/clock_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/custom_red"
            android:id="@+id/button6"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_end="205dp"/>


</android.support.constraint.ConstraintLayout>